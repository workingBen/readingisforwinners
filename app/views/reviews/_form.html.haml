= form_for @review do |f|
  - if @review.errors.any?
    #error_explanation
      %h2= "#{pluralize(@review.errors.count, "error")} prohibited this review from being saved:"
      %ul
        - @review.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :book_id
    = f.text_field :book_id
  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :summary
    = f.text_field :summary
  .field
    = f.label :rating
    = f.text_field :rating
  .field
    = f.label :recommended
    = f.check_box :recommended
  .actions
    = f.submit 'Save'
